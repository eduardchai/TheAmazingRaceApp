    ViewBag.Title = "404 Page Not Found";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div style="text-align:center">
    <h2 class="headline text-yellow" style="font-size:92px;">404</h2>

    <div class="error-content">
